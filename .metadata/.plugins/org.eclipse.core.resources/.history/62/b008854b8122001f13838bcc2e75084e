#include "Ship.h"

Ship::Ship(const GridPosition &bow, const GridPosition &stern)
{
}

bool Ship::isValid() const
{
	if(getBow().row == getStern().row && length() <=5 && length >= 2){
		return true;
	}
	return false;

}

GridPosition Ship::getBow() const
{
	return bow;
}

GridPosition Ship::getStern() const
{
	return stern;
}

int Ship::length() const
{
	if(getBow().row == getStern().row)
	{
		return(getStern().column - getBow().column);
	}
	else if(getBow().column == getStern().column)
	{
		return(getStern().row - getBow().row);
	}
	return 0;
}

const std::set<GridPosition> Ship::occupiedArea() const
{
}

const std::set<GridPosition> Ship::blockedArea() const
{
}

Ship::~Ship()
{
}

